<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonWeightLoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="loadWeightLossActivity"
        android:text="Weightloss"
        app:layout_constraintEnd_toEndOf="@+id/buttonWaterCalc"
        app:layout_constraintStart_toStartOf="@+id/buttonWaterCalc"
        app:layout_constraintTop_toBottomOf="@+id/buttonWaterCalc" />

    <Button
        android:id="@+id/buttonWaterCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="loadWaterCalcActivity"
        android:text="WaterCalc"
        app:layout_constraintEnd_toEndOf="@+id/motivationalQuote"
        app:layout_constraintStart_toStartOf="@+id/motivationalQuote"
        app:layout_constraintTop_toBottomOf="@+id/motivationalQuote" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="loadLoginActivity"
        android:text="Logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="134dp"
        android:fontFamily="monospace"
        android:text="Welcome, FIRSTNAME!"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/motivationalQuote"
        android:layout_width="300dp"
        android:layout_height="120dp"

        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuoteHeader" />

    <TextView
        android:id="@+id/textQuoteHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:fontFamily="monospace"
        android:text="Quote for thought:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWelcome" />

    <Button
        android:id="@+id/thlData"
        android:layout_width="117dp"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        android:onClick="loadTHLActivity"
        android:text="THL DATA"
        app:layout_constraintEnd_toEndOf="@+id/buttonWeightLoss"
        app:layout_constraintStart_toStartOf="@+id/buttonWeightLoss"
        app:layout_constraintTop_toBottomOf="@+id/buttonWeightLoss" />

    <Button
        android:id="@+id/buttonSwagger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="loadSwaggerApiActivity"
        android:text="Swagger"
        app:layout_constraintEnd_toEndOf="@+id/thlData"
        app:layout_constraintStart_toStartOf="@+id/thlData"
        app:layout_constraintTop_toBottomOf="@+id/thlData" />

</androidx.constraintlayout.widget.ConstraintLayout>